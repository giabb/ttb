<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
	<!-- basic_chat.aiml -->

	<category>
		<pattern>CIAO ^</pattern>
		<template>
			<think><set name="ciao"><star /></set></think>
			<condition name="ciao">
				<li value="">Ciao, come posso aiutarti?</li>
				<li value="unknown">Ciao, come posso aiutarti?</li>				
				<li>Ciao!<sr /></li>
			</condition>
		</template>
	</category>

	<category>
		<pattern>HEY ^</pattern>
		<template><srai>CIAO <star /></srai></template>
	</category>

	<category>
		<pattern>CIAO $amico</pattern>
		<template>Ciao, mi fa piacere che mi consideri un amico! Come posso aiutarti?</template>
	</category>

